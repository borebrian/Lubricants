@model Lubricants.Models.Add_item

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-1">
    <div class="card-body">
        <h4><img src="/SystemImage/addcategory.png" class="logo1" alt="" /> &nbsp;Add new stock&nbsp;| &nbsp;@ViewBag.itemName </h4>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="card card-1">

            <div class="card-body">
                <form asp-action="Add_stock" class="text-center">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Category_id" />
                    <div class="form-group">
                        @*<label asp-for="Item_name" class="control-label"></label>*@
                        <input type="hidden" asp-for="Item_name" class="form-control" />
                        <span asp-validation-for="Item_name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="Item_price" class="control-label"></label>*@
                        <input type="hidden" asp-for="Item_price" class="form-control" />
                        <span asp-validation-for="Item_price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label" ></label>
                        <input asp-for="Quantity" style="        border: 1px solid #68213A;
        border-radius: 15px;
        box-shadow: -webkit-box-shadow: 0px -1px 17px 0px rgba(0,0,0,0.75);
        -moz-box-shadow: 0px -1px 17px 0px rgba(0,0,0,0.75);
        box-shadow: 0px -1px 17px 0px rgba(0,0,0,0.75);" value="" class="form-control text-center" placeholder="Enter new ammount that was added" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="DateTime" class="control-label"></label>*@
                        <input type="hidden" asp-for="DateTime" class="form-control" />
                        <span asp-validation-for="DateTime" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <Button type="submit" class="btn btn-primary"> Submit &nbsp;<i class="fa fa-cloud-upload" aria-hidden="true"></i></Button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-12" style="margin-top:10px;">
        @*<div class="card card-1">

            <div class="card-body">*@
                @if (ViewBag.NewQuantity != null)
                {
                    <div class="alert alert-primary" role="alert">
                       <table class="table">
                           <tr><td colspan="2"><strong>Success!</strong> &nbsp; New items have been recorded </td></tr>
                           <tr>
                               <td>Initial quantity:</td><td>@ViewBag.InitialQuantity</td>
                           </tr>
                           <tr>
                               <td>New quantity:</td><td>@ViewBag.NewQuantity</td>
                           </tr>
                       </table>
                    </div>
                }
            @*</div>
            </div>*@

            </div>

            <div>
                @*<a asp-action="Index">Back to List</a>*@
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
