@model Lubricants.Models.Add_item

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Item details</h1>
<div class="card card-1">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">


                <h4>
                    <img src="/SystemImage/addcategory.png" class="logo1" alt="" /> &nbsp;Available items

                </h4>
            </div>
            <div class="col-lg-12" style="margin-top:10px;">
                <div class="input-group md-form form-sm form-2 pl-0">
                    <input class="form-control my-0 py-1 red-border" type="text" placeholder="Search for items" aria-label="Search">
                    <div class="input-group-append">
                        <span class="input-group-text red lighten-3" id="basic-text1">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="card card-1">
            <div class="card-header text-left" style="background-color:#68213A;color:white">
                <img src="/SystemImage/logo.png" alt="" class="rounded-circle" style="height:50px;width:50px;border:2px white solid" /> &nbsp; Add new items
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Category_id" class="control-label"></label>
                        <select asp-for="Category_id" class="form-control"
                                asp-items="@(new SelectList(@ViewBag.categoryList,"IDT","Category_name"))">
                        </select>



                        @*<input asp-for="Department" class="form-control" />*@
                        @*<span asp-validation-for="Department" class="text-danger"></span>*@
                    </div>
                    <div class="form-group">
                        <label asp-for="Item_name" class="control-label"></label>
                        <input asp-for="Item_name" class="form-control" />
                        <span asp-validation-for="Item_name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Item_price" class="control-label"></label>
                        <input asp-for="Item_price" class="form-control" />
                        <span asp-validation-for="Item_price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateTime" class="control-label"></label>
                        <input asp-for="DateTime" class="form-control" />
                        <span asp-validation-for="DateTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        @foreach (var item in ViewBag.JoinList)
        {
            <div class="card card-1" style="margin-bottom:10px;margin-top:10px">

                <div class="card-header text-left" style="background-color:#68213A;color:white">
                    <img src="/@item.ImageURL" alt="" class="rounded-circle" style="height:50px;width:50px;border:2px white solid" /> &nbsp;  @item.Category_name
                </div>
                <div class="card-body">
                    <table class="table">

                        <tr>
                            <td><i class="fa fa-shopping-cart" aria-hidden="true"></i> &nbsp;  Item name</td>
                            <td>
                                @item.Item_name
                            </td>
                        </tr>
                        @*<tr>
                            <td><i class="fa fa-circle" aria-hidden="true"></i> &nbsp; Item category</td>

                            <td>
                                @item.Category_name

                            </td>
                        </tr>*@
                        <tr>

                            <td><i class="fa fa-suitcase" aria-hidden="true"></i> &nbsp;Current Quantity</td>


                            <td>
                                @item.Quantity
                                @item.id
                            </td>
                        </tr>
                        <tr>
                            <td><i class="fa fa-usd" aria-hidden="true"></i> &nbsp;Item price</td>

                            <td>
                               Ksh.&nbsp; @item.Item_price

                            </td>
                        </tr>
                        <tr>
                            <td colspan="2"><div class="btn-group mr-2" role="group" aria-label="First group">
    <a class="btn btn-secondary text-light"><i class="fa fa-usd" aria-hidden="true"></i>&nbsp;Change price</a>
    <a class="btn btn-primary text-light"><i class="fa fa-cart-plus" aria-hidden="true"></i>&nbsp;Restock</a>
    <a class="btn btn-secondary text-light" asp-action="Delete" asp-controller="Add_item" asp-route-id="@item.id"><i class="fa fa-trash" aria-hidden="true"></i>&nbsp;Remove</a>

</div></td>
                        </tr>

                    </table>

                </div></div>
                }
            </div>
        </div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
