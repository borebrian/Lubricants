@model IEnumerable<Lubricants.Models.Item_category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-1">
    <div class="card-body">
        <h4><img src="/SystemImage/addcategory.png" class="logo1" alt="" /> &nbsp;Availlable category&nbsp; </h4>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="card card-1">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Category_name)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="/@item.ImageURL" alt="" class="rounded-circle" style="height:40px;width:40px;" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category_name)
                                </td>
                                <td>
                                    @*<a asp-action="Edit" asp-route-id="@item.IDT">Edit</a> |*@
                                    @*<a asp-action="Details" asp-route-id="@item.IDT">Details</a> |*@
                                    <a asp-action="Delete" asp-route-id="@item.IDT" class="btn btn-primary">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div></div></div></div>